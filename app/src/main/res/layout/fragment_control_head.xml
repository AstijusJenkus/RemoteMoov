<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ControlHeadFragment">

    <ImageView
        android:id="@+id/view_image_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/head"
        android:contentDescription="@string/logo_description_part" />

    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/view_image_head"
        app:layout_constraintBottom_toBottomOf="@id/view_image_head"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:baselineAligned="false">

        <!-- Right Half -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".5"
            android:layout_width="0sp"
            android:layout_height="match_parent">

            <View
                android:layout_weight=".375"
                android:layout_width="match_parent"
                android:layout_height="0sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight=".225"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <!-- Eyelids -->
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="0sp">

                    <View
                        android:layout_weight=".05"
                        android:layout_width="0sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:translationY="4sp"
                        android:layout_weight=".5"
                        android:id="@+id/button_eye_lids"
                        android:layout_width="0sp"
                        android:padding="1sp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/button_control"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/white"
                        android:text="@string/title_eyelids" />

                    <View
                        android:layout_weight=".45"
                        android:layout_width="0sp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <!-- Eye Right -->
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="0sp">

                    <View
                        android:layout_weight=".15"
                        android:layout_width="0sp"
                        android:layout_height="match_parent" />

                    <Button
                        android:translationY="-4sp"
                        android:layout_weight=".5"
                        android:id="@+id/button_eye_y"
                        android:layout_width="0sp"
                        android:padding="1sp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/button_control"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/white"
                        android:text="@string/button_eye" />

                    <View
                        android:layout_weight=".35"
                        android:layout_width="0sp"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_weight=".04"
                android:layout_width="match_parent"
                android:layout_height="0sp" />

            <!-- Jaw -->
            <LinearLayout
                android:layout_weight=".1125"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <View
                    android:layout_weight=".025"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight=".225"
                    android:id="@+id/button_jaw"
                    android:backgroundTint="@color/button_control"
                    android:focusable="true"
                    android:padding="1sp"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/white"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="@string/title_jaw" />

                <View
                    android:layout_weight=".2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_weight=".375"
                android:layout_width="match_parent"
                android:layout_height="0sp" />
            </LinearLayout>

        <!-- Left Half -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".5"
            android:layout_width="0sp"
            android:layout_height="match_parent">

            <View
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="0sp" />

            <!-- Head Rotate -->
            <LinearLayout
                android:layout_weight=".075"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <View
                    android:layout_weight=".2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight=".3"
                    android:id="@+id/button_rotate"
                    android:backgroundTint="@color/button_control"
                    android:focusable="true"
                    android:padding="1sp"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/white"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="@string/button_rotate" />

                <View
                    android:layout_weight=".1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_weight=".035"
                android:layout_width="match_parent"
                android:layout_height="0sp" />

            <!-- Eye Left -->
            <LinearLayout
                android:layout_weight=".075"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <View
                    android:layout_weight=".2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight=".29"
                    android:id="@+id/button_eye_x"
                    android:backgroundTint="@color/button_control"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="1sp"
                    android:textColor="@color/white"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="@string/button_eye" />

                <View
                    android:layout_weight=".125"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_weight=".125"
                android:layout_width="match_parent"
                android:layout_height="0sp" />

            <!-- Neck Roll -->
            <LinearLayout
                android:layout_weight=".075"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <View
                    android:layout_weight=".1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight=".2"
                    android:id="@+id/button_neck_roll"
                    android:backgroundTint="@color/button_control"
                    android:focusable="true"
                    android:padding="1sp"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/white"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="@string/button_roll" />

                <View
                    android:layout_weight=".1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <!-- Neck -->
            <LinearLayout
                android:layout_weight=".075"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                <View
                    android:layout_weight=".15"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />

                <Button
                    android:layout_weight=".2"
                    android:id="@+id/button_neck"
                    android:backgroundTint="@color/button_control"
                    android:focusable="true"
                    android:padding="1sp"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/white"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="@string/button_neck" />

                <View
                    android:layout_weight=".05"
                    android:layout_width="0sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_weight=".13"
                android:layout_width="match_parent"
                android:layout_height="0sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>