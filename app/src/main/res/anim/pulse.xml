<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1250">

    <scale
        android:repeatCount="infinite"
        android:repeatMode="restart"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromXScale="125sp"
        android:toXScale="250sp"
        android:fromYScale="125sp"
        android:toYScale="250sp" />

    <alpha
        android:repeatCount="infinite"
        android:repeatMode="restart"
        android:fromAlpha="1"
        android:toAlpha="0" />

</set>